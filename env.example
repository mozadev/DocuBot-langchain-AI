# ===========================================
# DocuBot AI - Configuración de Variables de Entorno
# ===========================================
# Copia este archivo como .env y configura tus valores

# ===========================================
# OBLIGATORIO: Configuración de OpenAI
# ===========================================
# Obtén tu clave de API en: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Configuración de Modelos de OpenAI
# ===========================================
# Modelo de chat (opciones: gpt-4, gpt-4o-mini, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4o-mini

# Modelo de embeddings (opciones: text-embedding-3-large, text-embedding-3-small, text-embedding-ada-002)
EMBEDDING_MODEL=text-embedding-3-small

# Temperatura del modelo (0.0 = determinístico, 1.0 = muy creativo)
OPENAI_TEMPERATURE=0.2

# ===========================================
# Configuración de la Aplicación
# ===========================================
APP_NAME=DocuBot AI
DEBUG=False

# ===========================================
# Configuración de Procesamiento de Documentos
# ===========================================
# Tamaño de fragmentos de texto (recomendado: 500-1500)
CHUNK_SIZE=1000

# Solapamiento entre fragmentos (recomendado: 10-20% del CHUNK_SIZE)
CHUNK_OVERLAP=200

# ===========================================
# Configuración de Base de Datos Vectorial
# ===========================================
# Ruta donde se almacenará la base de datos LanceDB
LANCE_DB_PATH=./data/vector_db

# Nombre de la tabla en LanceDB
LANCE_DB_TABLE=documents

# ===========================================
# Configuración de Logging
# ===========================================
# Nivel de logs (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Archivo donde se guardarán los logs
LOG_FILE=./logs/app.log

# ===========================================
# Configuración Avanzada (Opcional)
# ===========================================
# Puerto para la aplicación Streamlit (por defecto: 8501)
# STREAMLIT_SERVER_PORT=8501

# Host para la aplicación Streamlit (por defecto: localhost)
# STREAMLIT_SERVER_ADDRESS=localhost

# Configuración de memoria para procesamiento de documentos
# MAX_FILE_SIZE_MB=50

# Configuración de timeout para requests a OpenAI (en segundos)
# OPENAI_TIMEOUT=30
